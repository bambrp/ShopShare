<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="viewEnd"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/runningTotal"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="19dp"
        android:editable="false"
        android:fontFamily="monospace"
        android:text="0.00"
        android:textAlignment="viewEnd"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/itemCost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemCost"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="16dp"
        android:editable="false"
        android:fontFamily="monospace"
        android:text="0.00"
        android:textAlignment="viewEnd"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/runningTotal" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemCost">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_9"
                style="@style/NumPad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:insetLeft="0dp"
                android:insetRight="6dp"
                android:onClick="handleNumber"
                android:text="9" />

            <Button
                android:id="@+id/button_8"
                style="@style/NumPad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:insetLeft="6dp"
                android:insetRight="6dp"
                android:onClick="handleNumber"
                android:text="8"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button_7"
                style="@style/NumPad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:insetLeft="6dp"
                android:onClick="handleNumber"
                android:text="7"
                android:textSize="24sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_6"
                style="@style/NumPad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:insetRight="6dp"
                android:onClick="handleNumber"
                android:text="6" />

            <Button
                android:id="@+id/button_5"
                style="@style/NumPad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:insetLeft="6dp"
                android:insetRight="6dp"
                android:onClick="handleNumber"
                android:text="5" />

            <Button
                android:id="@+id/button_4"
                style="@style/NumPad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:insetLeft="6dp"
                android:onClick="handleNumber"
                android:text="4" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_3"
                style="@style/NumPad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:insetRight="6dp"
                android:onClick="handleNumber"
                android:text="3" />

            <Button
                android:id="@+id/button_2"
                style="@style/NumPad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:insetLeft="6dp"
                android:insetRight="6dp"
                android:onClick="handleNumber"
                android:text="2" />

            <Button
                android:id="@+id/button_1"
                style="@style/NumPad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:insetLeft="6dp"
                android:onClick="handleNumber"
                android:text="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/button_0"
                style="@style/NumPad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.75"
                android:insetRight="6dp"
                android:onClick="handleNumber"
                android:text="0" />

            <Button
                android:id="@+id/button_decimal"
                style="@style/NumPad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:insetLeft="6dp"
                android:onClick="handleNumber"
                android:text="." />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/button_fullAdd"
                style="@style/NumPad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:insetRight="6dp"
                android:onClick="addFull"
                android:text="@string/button_add" />

            <Button
                android:id="@+id/button_halfAdd"
                style="@style/NumPad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:insetLeft="6dp"
                android:insetRight="6dp"
                android:onClick="addHalf"
                android:text="@string/button_half" />

            <ImageButton
                android:id="@+id/button_del"
                style="@style/NumPad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#757373"
                android:contentDescription="@string/button_del"
                android:onClick="deleteChar"
                app:srcCompat="@android:drawable/ic_input_delete" />

        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>